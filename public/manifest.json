{
  "manifest_version": 3,
  "name": "TrustLens â€“ Review Scraper",
  "version": "1.0.0",
  "description": "Scrape product reviews via a Puppeteer backend.",
  "permissions": ["storage", "scripting", "activeTab", "cookies"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.us/*",
    "*://*.temu.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "192": "icons/logo.png"
    }
  },
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://*.aliexpress.com/*","*://*.aliexpress.us/*",  "*://*.temu.com/*"],
      "js": ["static/js/contentScript.js"]
    }
  ]
}
